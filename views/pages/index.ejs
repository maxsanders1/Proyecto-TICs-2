<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('Headers.ejs') %>
        <style>
            .table-hover tbody tr:hover td,
            .table-hover tbody tr:hover th {
                background-color: rgb(253, 151, 108);
            }
            a {
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        <div class="container-fluid">
        <div class="row flex-nowrap">
        <%- include('sidebar.ejs') %>
        <div class="col py-3">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nombre del Producto</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let j = 0; j < i; j++){%>
                    <tr>
                        <th scope="row"><%= nombre_prod[j] %></th>
                        <td><%= numero[j] %></td>
                        <td>
                            <a href="/modProd?nombre_prod=<%=nombre_prod[j]%>&cantidad=<%=numero[j]%>">
                                <button type="button" class="btn btn-warning">
                                    Modificar
                                </button>
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal<%= j %>">
                                Eliminar
                            </button>
                            
                            <!-- The Modal -->
                            <div class="modal" id="myModal<%= j %>">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- Modal Header -->
                                        <div class="modal-header">
                                            <h4 class="modal-title">Â¡Atencion! </h4>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
    
                                        <!-- Modal body -->
                                        <div class="modal-body">
                                            Se eliminara el Producto:
                                            <h1><%= (nombre_prod[j]) %></h1>
                                        </div>
    
                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                            <form action="/eliminar" method="post">
                                                <input
                                                    class="form-control"
                                                    id="floatingInputName"
                                                    name="nombre_prod"
                                                    placeholder="nombre"
                                                    value="<%= nombre_prod[j] %>"
                                                    readonly
                                                    style="display: none;"
                                                />
                                                <button type="submit" class="btn btn-danger">Eliminar</button>
                                            </form>
                                            
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                Cancelar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
    
            <a href="/agregar">
                <button type="button" class="btn btn-primary">
                    Agregar Producto
                </button>
            </a>
    
        </div>
    </div>
</div>
        
        <!-- Button to Open the Modal -->
    </body>
</html>
